/*
Process / Activity Names as of March 14, 2018

    Recruitment
        Identify Staffing Need
        Prepare Pre-Recruitment Documents
        Finalize the Pre-Recruitment Checklist
        Complete Workbooks
        First Step of Recruitment

    Classification
        Submit PD/SOD for Classification
        Classify PD/SOD
        Provide Concurrence on Classification
        Finalize Classification
        Provide Additional Concurrence on Classification
*/

/*----------------------------------------------------------------------------------------------------
    Recruitment Process Rules:
        All steps except the first step (Identify Staffing Need) are hard-stopping steps.
        As of 04/08/2018, HiringMethod is the only field driving document list
----------------------------------------------------------------------------------------------------*/

//------------------------------
// HiringMethod - Title 5
//------------------------------
rule "CDC - Recruitment - Title 5"
    when
        $docSearch  :   WorkflowRuleSearch
                        (
                            tenantID == "CDC",
                            procName == "Recruitment",
                            formName == "Recruitment",
                            $actName : actName, $fields : fields
                        )

        $field      :   ( WorkflowField
                            (
                                fieldId == "HiringMethod",
                                fieldValue == "Title 5"
                            ) from $fields
                        )

        $workflowDocuments : ArrayList()

    then
        System.out.println("RULE R1.1>> " + $docSearch);
        addDocument($workflowDocuments, "OF-8", ($actName != "Identify Staffing Need"));
        addDocument($workflowDocuments, "Position Description", ($actName != "Identify Staffing Need"));
        addDocument($workflowDocuments, "Organizational Chart", ($actName != "Identify Staffing Need"));
end

